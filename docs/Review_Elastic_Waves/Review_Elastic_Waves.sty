% Bibliography and citation settings
\usepackage{natbib}
\bibliographystyle{unsrtnat}
\setcitestyle{square, numbers}

% Definition of \iconbox command
\newtcbox{\iconbox}[1][]{
  nobeforeafter, tcbox raise base, 
  boxrule=0.4pt, top=0pt, bottom=-1pt,
  right=0.1pt, left=0.1pt, arc=1pt, boxsep=1pt,
  fontupper={\tiny \sffamily}, before upper={\vphantom{dlg}},
  colframe=white, colback=black!10!white, coltext=black, #1
}

% Packages for drawing lines and drop caps
\usepackage{tikz} % For drawing lines
\usepackage{lettrine} % For drop caps

% Redefining citation commands with gray text
\renewcommand{\citep}[2][]{\textcolor{gray}{(\citeauthor{#2}, \citeyear[#1]{#2})}}
\renewcommand{\citeauthoryear}[2][]{\textcolor{gray}{\citeauthor{#2} (\textcolor{gray}{\citeyear[#1]{#2}})}}

% Font settings
\usepackage{fontspec}
